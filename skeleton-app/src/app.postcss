@tailwind base;
@tailwind components;
@tailwind utilities;
@tailwind variants;

html,
body {
  @apply h-full overflow-hidden;
}

.cRouteBodyStyle {
  @apply flex flex-col items-center justify-center space-y-4;
}

.cTitlePartStyle {
  @apply m-2 md:my-4;
}

.cTitleStyle {
  @apply font-bold text-2xl md:!text-3xl;
}

.cContentPartStyle {
  @apply flex flex-col items-center space-y-4 m-4;
}

.cInputFormAndMessagePartStyle {
  @apply flex items-center space-x-3;
}

.cLinkButtonStyle {
  @apply text-lg text-blue-500 hover:underline font-bold;
}

.cIconButtonStyle {
  @apply px-2 py-1 text-white rounded bg-blue-500 hover:bg-blue-600;
}

.cIconDivStyle {
  @apply w-5 h-5 flex-shrink-0;
}

.cIconStyle {
  @apply w-full h-full;
}

.cButtonSpan {
  @apply w-16 h-5 flex items-center justify-center;
}

.cSpeechBubbleHeaderStyle {
  @apply border-b-8 border-b-surface-100
    border-t-8 border-t-transparent
    border-l-8 border-l-transparent
    border-r-8 border-r-transparent;
}

.cSpeechBubbleBodyStyle {
  @apply w-72 min-h-40 p-4 text-surface-900 bg-surface-100 rounded-xl;
}
